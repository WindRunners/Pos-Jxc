<!doctype html>

<html>

<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
  <meta charset="utf-8"/>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "products", :media => "all" %>

</head>

<body class="container">

<div style="height:20px">
  <br/>
</div>

<div class="container">
  <img src="<%= @product.main_url %>" class="center-block" style="width:100%"/>
</div>

<div class="mod-productDetail">
  <div class="product-title-no-short"><p class="product-name"><%= @product.title %></p></div>
  <div class="product-shopping">
    <span class="product-price">￥<%= @product.price %></span>
  </div>
  <!--<div style="clear: right" class="property-item product-promotion">-->
    <!--<span class="promotion-title">促销</span>-->
    <!--<span class="promotion-content"> @product.tags </span>-->
  <!--</div>-->
</div>


<div class="mod-productDetail">
  <%- model_class = Product -%>
  <div class="property-item">
    <span class="leading-word">
      <%= raw(model_class.human_attribute_name(:brand)) %>
    </span>
    <span class="content-word">
      <%= @product.brand %>
    </span>
  </div>
  <div class="property-item">
    <span class="leading-word"><%= raw(model_class.human_attribute_name(:specification)) %></span>
    <span class="content-word"><%= @product.specification %></span>
  </div>

  <div class="property-item">
    <span class="leading-word"><%= raw(model_class.human_attribute_name(:origin)) %></span>
    <span class="content-word"><%= @product.origin %></span>
  </div>

  <div class="property-item">
    <span class="leading-word">详情</span>
  </div>
</div>

<div class="row ">
  <img src="<%= @product.desc_url %>" class="img-responsive center-block"/>
</div>


</body>


</html>