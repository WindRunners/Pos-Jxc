<div class="modal-header">
  <button type="button" class="close"
          data-dismiss="modal" aria-hidden="true">
    &times;
  </button>
  <h4 class="modal-title" id="myModalLabel">
    编辑秒杀商品
  </h4>
</div>
<form action="<%= panic_buying_add_product_url(@panic_buying_id) %>" method="post" data-remote="true">
  <input type="hidden" name="product_id" value="<%= @product.id %>"/>
  <div class="modal-body">
    <div class="row">
      <table class="table table-hover">
        <thead>
        <tr>
          <th style="text-align: center">名称</th>
          <th style="text-align: center;width: 10%">库存</th>
          <th style="text-align: center;">秒杀数</th>
          <th style="text-align: center;width: 10%">零售价</th>
          <th style="text-align: center;">活动数</th>
        </tr>
        </thead>
        <tbody>

        <tr>
          <td ><%= @product.title %></td>
          <td style="text-align: center"><%= @product.stock %></td>
          <td style="text-align: center">
            <input type="text" style="width: 50%" name="panic_quantity" value="<%= @product.panic_quantity %>">
          </td>
          <td style="text-align: center"><%= @product.price %></td>
          <td style="text-align: center">
            <input type="text" style="width: 50%" name="panic_price" value="<%= @product.panic_price %>">
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default"
            data-dismiss="modal">关闭
    </button>
    <button type="submit" class="btn btn-primary">
      保存
    </button>
  </div>
</form>