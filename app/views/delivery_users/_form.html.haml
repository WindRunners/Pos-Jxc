= form_for @delivery_user,html: {class: "form-horizontal"} do |f|
  - if @delivery_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@delivery_user.errors.count, "error")} prohibited this delivery_user from being saved:"
      %ul
        - @delivery_user.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :mobile ,"手机号:",class: "col-sm-3 control-label no-padding-right"
    %div.col-sm-9
      %div.col-xs-10 #{@delivery_user.mobile}
  .form-group
    = f.label :real_name ,"真实名:",class: "col-sm-3 control-label no-padding-right"
    %div.col-sm-9
      %div.col-xs-10 #{@delivery_user.real_name}
  .form-group
    = f.label :work_status ,"工作状态:",class: "col-sm-3 control-label no-padding-right"
    %div.col-sm-9
      %div.col-xs-10 #{@delivery_user.work_status==0?"离岗":"在岗"}
  .form-group
    = f.label :status ,"审核状态",class: "col-sm-3 control-label no-padding-right"
    %div.col-sm-9
      = #{f.status}

  .actions
    = f.submit 'Save'
