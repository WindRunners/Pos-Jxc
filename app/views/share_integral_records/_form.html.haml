= form_for @share_integral_record do |f|
  - if @share_integral_record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@share_integral_record.errors.count, "error")} prohibited this share_integral_record from being saved:"
      %ul
        - @share_integral_record.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :shared_customer_id
    = f.text_field :shared_customer_id
  .field
    = f.label :register_customer_id
    = f.text_field :register_customer_id
  .field
    = f.label :is_confirm
    = f.check_box :is_confirm
  .actions
    = f.submit 'Save'
