<!-- #section:basics/content.breadcrumbs -->
<div class="breadcrumbs" id="breadcrumbs">
  <script type="text/javascript">
    try {
      ace.settings.check('breadcrumbs', 'fixed')
    } catch (e) {
    }
  </script>

  <ul class="breadcrumb">
    <li>
      <i class="ace-icon fa fa-home home-icon"></i>
      <a href="#">首页</a>
    </li>
    <% if @title.present? %>
        <li class="active"><%= @title %></li>
    <% end %>
  </ul><!-- /.breadcrumb -->

  <% if flash[:notice] %>
      <div id="notice" class="alert alert-block alert-success center">
        <button type="button" class="close" data-dismiss="alert">
          <i class="ace-icon fa fa-times"></i>
        </button>
        <%= flash[:notice] %>
      </div>
  <% end %>

  <% if @showSearchBar %>
      <div class="nav-search" id="nav-search">
        <%= form_tag warehouse_index_products_path, method: :get, :class => "form-search", :id => 'searchForm' do %>
								<span class="input-icon">
                                  <%= text_field_tag 'searchText', params[:searchText], placeholder: '搜索', :class => "nav-search-input" %>
                  <i class="ace-icon fa fa-search nav-search-icon"></i>
								</span>
        <% end %>
      </div>
  <% end %>
</div>

<script>
  $('#notice').delay(2000).fadeOut(400)
</script>
<!-- /section:basics/content.breadcrumbs -->