%html{:lang => "en", 'ng-app' => 'lark'}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "elephant"
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}/
    = csrf_meta_tags
    %script{type:"text/javascript",src:"http://api.map.baidu.com/api?v=2.0&ak=PxeMqAnIzuRf8UGGuQ9zNlor"}
    = stylesheet_link_tag "application", :media => "all"

    = javascript_include_tag "angular.min.js"

    = javascript_include_tag "application"


    /[if lte IE 9]
      = stylesheet_link_tag "ace/ace-part2.css"
      = stylesheet_link_tag "ace/ace-ie.css"
    / ace settings handler
    = javascript_include_tag "ace/ace-extra.js"

    / HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries
    /[if lte IE 8]
      = javascript_include_tag "ace/html5shiv.js"
      = javascript_include_tag "ace/respond.js"
  %body.no-skin
    %div#jplayer
    = render 'partials/navbar'
    #main-container.main-container
      = render 'partials/sidebar'
      .main-content
        .main-content-inner
          = render 'partials/breadcrumbs'
          .page-content
            / PAGE CONTENT BEGINS
            .page-content-area{'data-ajax-content' => true}
              = yield
      / PAGE CONTENT ENDS
      / /.page-content
      / /.main-content

      %a#btn-scroll-up.btn-scroll-up.btn.btn-sm.btn-inverse{:href => "#"}
        %i.ace-icon.fa.fa-angle-double-up.icon-only.bigger-110
    / /.main-container
    / basic scripts
    / page specific plugin scripts
    /[if lte IE 8]
      <haml_loud> javascript_include_tag &quot;/theme/ace/js/excanvas.min.js&quot; </haml_loud>
%html
  :javascript
    $(document).ready(function(){
        ahoy.trackAll();

        $('.datepicker').datepicker({
            language: 'zh-CN',
            format: "yyyy-mm-dd",
            autoclose: true
        });

        /* Activating Best In Place */
        jQuery(".best_in_place").best_in_place();

        $("#jplayer").jPlayer({
            ready: function () {
              $(this).jPlayer("setMedia", {
                mp3: "/audio/neworder.mp3"
              });
            },
            supplied: "mp3",
            loop: true
        });

        MessageBus.start();
        //MessageBus.callbackInterval = 100;
        MessageBus.alwaysLongPoll = true;
        MessageBus.subscribe("/channel/#{current_user.userinfo.id if current_user.userinfo.present? }", function(data){

          if(data != null){
            $.gritter.add({
              title: '您有一条新的订单!',
              text: '订单号码：<a href="#/orders/' + data.order_id + '?tab=all">' + data.orderno + '</a>',
              class_name: 'gritter-success gritter-light'
            });
            $("#jplayer").jPlayer('play');
          }else{
            $("#jplayer").jPlayer('stop');
          }

          $.get('#{order_state_count_orders_path}', {}, function (datacount, status) {
              if (status == 'success') {
                  $('#paid_order_count').text(datacount.order_paid_count);
                  $('#all_order_count').text('当前订单总数：' + datacount.order_all_count);
                  $('#new_order_count').text('+' + datacount.order_paid_count);
                  $('#distribution_order_count').text('+' +datacount.order_distribution_count);

                  $('#all_count').text(datacount.order_all_count);
                  $('#generation_count').text(datacount.order_generation_count);
                  $('#paid_count').text(datacount.order_paid_count);
                  $('#distribution_count').text(datacount.order_distribution_count);
                  $('#receive_count').text(datacount.order_receive_count);
              } else {
                  ;
              }
          });

        });

    });

    $('.page-content-area').ace_ajax({
      content_url: function(hash) {
        //hash is the value from document url hash


        if (hash.indexOf('|hash') > -1) {
          hash = hash.substr(0, hash.indexOf('|hash'));
        }

        console.log(hash);

        //take "url" param and return the relevant url to load
        return hash;
      },
      default_url: '/dashboards/index'
      ,
      loading_icon: "fa-cog fa-2x blue"
    });