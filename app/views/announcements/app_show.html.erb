<html>


<head>
  <script src="http://libs.baidu.com/jquery/2.0.0/jquery.js"></script>
  
</head>
<body>

<div class="row" style="padding:2% 4%; font-family:SimHei;color:#282828; ">
  <div class="col-xs-12">
    <div class="widget-header widget-header-large" style="text-align: center;font-size:400%;">
      <p><%= @announcement.title %></p>
    </div>
    <div class="col-xs-6" style="font-size:280%;text-align: left;">
      <% if @announcement.source.present? %>
          <P><%= @announcement.source %></P>
      <% else %>
          <P>来源：小达快讯</P>
      <% end %>
    </div>
    <div class="col-xs-6" style="font-size:280%;text-align: right;"><p><%= @announcement.created_at %></p></div>
    <div class="widget-body">
      <div id="announcement_content" class="" style="font-size:280%;line-height:160%; border-top:1px solid #d6d6d6;">
        <%= markdown @announcement.content %>
      </div>
    </div>
  </div>
  <div id="announcement_comments" class="row" style="font-size:280%;">
    <% if @announcement.chateau_comments.present? %>
        <%= @announcement.chateau_comments.each do |c| %>
            <div class="widget-box">
              <div class="widget-header">
                <% if c.user.present? %>
                    <P><%= c.user.userinfo.name %></P>
                <% else %>
                    <P>无名人士</P>
                <% end %>
              </div>
              <div class="widget-body">
                <% if c.content.present? %>
                    <P><%= c.content %></P>
                <% else %>
                    <P>content</P>
                <% end %>
              </div>
              <div class="widget-footer">
                <% if c.hits.present? %>
                    <P><%= c.hits %></P>
                <% else %>
                    <P>hits</P>
                <% end %>

                <% if c.created_at.present? %>
                    <P><%= c.created_at %></P>
                <% else %>
                    <P>created_at</P>
                <% end %>
              </div>
            </div>

        <% end %>
    <% else %>
        <button onclick="add_comment();">暂无评论，点击抢沙发。</button>
        <input type="text" id="input_content" value="1111111"/>
    <% end %>
  </div>
</div>
</body>

</html>