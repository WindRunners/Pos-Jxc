%div{class:'page-header'}
  %h1
    =t("mongoid.models.jxc_stock_overflow_bill")
    (总共
    = @jxc_stock_overflow_bills.size
    条)
%div{class:'row',style:'background-color:#EFF3F8;margin:0px;'}
  %div{class:'col-xs-6'}
    %div{class:'dataTables_info',id:'dynamic-table_info',role:'status',"aria-live"=>'polite',style:'padding-top:13px;'}
      = page_entries_info @jxc_stock_overflow_bills
  %div{class:'col-xs-6'}
    %div{class:'dataTables_paginate paging_simple_numbers',id:'dynamic-table_paginate'}
      %ul{class:'pagination',style:'padding-top:5px;'}
        %li{class:'paginate_button previous disabled',id:'dynamic-table_previous',"aria-controls"=>'dynamic-table',"tabindex"=>'0'}
          = paginate @jxc_stock_overflow_bills
.space.space-4
%table{class: "table table-striped table-bordered table-hover"}
  %thead
    %tr
      %th=t('mongoid.attributes.jxc_stock_overflow_bill.bill_no')
      %th=t('mongoid.attributes.jxc_stock_overflow_bill.jxc_storage')
      %th=t('mongoid.attributes.jxc_stock_overflow_bill.handler')
      %th=t('mongoid.attributes.jxc_stock_overflow_bill.overflow_date')
      %th=t('mongoid.attributes.jxc_stock_overflow_bill.remark')
      %th=t('mongoid.attributes.jxc_stock_overflow_bill.bill_status')
      %th=t("helpers.actions")
      %th

  %tbody
    - @jxc_stock_overflow_bills.each do |jxc_stock_overflow_bill|
      %tr
        %td= jxc_stock_overflow_bill.bill_no
        %td= jxc_stock_overflow_bill.jxc_storage.storage_name if jxc_stock_overflow_bill.jxc_storage.present?
        %td= jxc_stock_overflow_bill.handler[0].name if jxc_stock_overflow_bill.handler[0].present?
        %td= jxc_stock_overflow_bill.overflow_date.strftime('%m/%d/%Y') unless jxc_stock_overflow_bill.overflow_date.blank?
        %td= jxc_stock_overflow_bill.remark
        %td{style:'color:red;font-weight:bold;'}
          = jxc_stock_overflow_bill.bill_status == '0' ? '已创建' : (jxc_stock_overflow_bill.bill_status == '1' ? '已审核' : '已红冲')
        %td= link_to t('helpers.links.show'), '', 'data-href': jxc_stock_overflow_bill_path(jxc_stock_overflow_bill),class:'btn btn-xs btn-info'
        %td= link_to t('helpers.links.edit'), '','data-href': edit_jxc_stock_overflow_bill_path(jxc_stock_overflow_bill),class:'btn btn-xs btn-warning',disabled:jxc_stock_overflow_bill.bill_status == '0' ? false:true

%br
= link_to t("helpers.links.new"),'','data-href': new_jxc_stock_overflow_bill_path,:class => 'btn btn-primary'

