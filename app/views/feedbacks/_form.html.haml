= form_for @feedback ,:remote=>true,html: {class: "form-horizontal"} do |f|
  - if @feedback.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feedback.errors.count, "error")} prohibited this feedback from being saved:"
      %ul
        - @feedback.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :mobile,'手机号码:',class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :mobile,class: 'form-control',placeholder:'手机号码'
  .form-group
    = f.label :real_name,'配送员姓名:',class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :real_name,class: 'form-control',placeholder:'配送员姓名'
  .form-group
    = f.label :feedback_content,'反馈信息:',class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :feedback_content,class: 'form-control',placeholder:'反馈信息'
  .form-group
    .col-sm-offset-2.col-sm-8
      = f.submit '保存',class:'btn btn-xs btn-info'



