= form_for @gift_bag do |f|
  - if @gift_bag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gift_bag.errors.count, "error")} prohibited this gift_bag from being saved:"
      %ul
        - @gift_bag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :receiver_mobile
    = f.text_field :receiver_mobile
  .field
    = f.label :sign_status
    = f.number_field :sign_status
  .field
    = f.label :expir_days
    = f.number_field :expir_days
  .field
    = f.label :expiry_time
    = f.datetime_select :expiry_time
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :memo
    = f.text_field :memo
  .actions
    = f.submit 'Save'
