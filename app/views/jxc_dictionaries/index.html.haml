%div{class:'page-header'}
  %h1
    (总共
    = @jxc_dictionaries.size
    条)
%div{class:'row',style:'background-color:#EFF3F8;margin:0px;'}
  %div{class:'col-xs-6'}
    %div{class:'dataTables_info',id:'dynamic-table_info',role:'status',"aria-live"=>'polite',style:'padding-top:13px;'}
      = page_entries_info @jxc_dictionaries
  %div{class:'col-xs-6'}
    %div{class:'dataTables_paginate paging_simple_numbers',id:'dynamic-table_paginate'}
      %ul{class:'pagination',style:'padding-top:5px;'}
        %li{class:'paginate_button previous disabled',id:'dynamic-table_previous',"aria-controls"=>'dynamic-table',"tabindex"=>'0'}
          = paginate @jxc_dictionaries
.space.space-4
%table{class:"table table-striped table-bordered table-hover"}
  %thead
    %tr
      %th 字典项
      %th 字典描述
      %th 排序码
      %th 拼音码
      %th 操作

  %tbody
    - @jxc_dictionaries.each do |jxc_dictionary|
      %tr
        %td= jxc_dictionary.dic
        %td= jxc_dictionary.dic_desc
        %td= jxc_dictionary.sort
        %td= jxc_dictionary.pinyin_code
        %td
          = link_to '查看', '', 'data-href' => jxc_dictionary_path(jxc_dictionary),class:'btn btn-xs btn-info'
          = link_to '编辑', '', 'data-href' => edit_jxc_dictionary_path(jxc_dictionary),class:'btn btn-xs btn-warning'
          = link_to '删除', jxc_dictionary_path(jxc_dictionary), :method => :delete,remote:true, :data => { :confirm => '您确定删除此条信息吗?' },class:'btn btn-xs btn-danger'

%br
= link_to '添加', '', 'data-href' => new_jxc_dictionary_path , :class=>'btn btn-xs btn-success'
