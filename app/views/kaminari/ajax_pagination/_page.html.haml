- if page.current?
  %li.active
    = content_tag :a, page, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil))
- else
  %li
    = link_to page, "javascript:void(0);", remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)),:onclick => "ajax_pagination(#{page})"
