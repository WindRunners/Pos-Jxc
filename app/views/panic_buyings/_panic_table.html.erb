<br/>
<table id="" class="table no-padding">
  <thead>
      <tr>
        <th style="text-align: center" >开始时间</th>
        <th style="text-align: center" >结束时间</th>
        <th style="text-align: center" >创建时间</th>
        <th style="text-align: center" >活动状态</th>
        <th style="text-align: center" ></th>
      </tr>
  </thead>
  <tbody>
  <% @panic_buyings.each do |panic_buying| %>
      <tr>
        <td style="text-align: center">
          <%= panic_buying.beginTime %>
        </td>
        <td style="text-align: center">
          <%= panic_buying.endTime %>
        </td>
        <td style="text-align: center">
          <%= panic_buying.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
        </td>
        <td style="text-align: center">
          <% if 0 == panic_buying.state %>
              未开始
          <% elsif 1 == panic_buying.state %>
              <span class="label  label-warning">进行中</span>
          <% elsif 2 == panic_buying.state %>
              已结束
          <% end %>
        </td>
        <td style="text-align: center">


          <div class="hidden-sm hidden-xs action-buttons">
            <% if 1 != panic_buying.state%>
                <a href="#<%= panic_buying_path(panic_buying.id) %>" class="green">
                  <i class="ace-icon fa fa-pencil bigger-130"></i>
                </a>
            <% else%>
                <a href="#<%= panic_buying_path(panic_buying.id) %>" class="blue">
                  <i class="ace-icon fa fa-search-plus bigger-130"></i>
                </a>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

