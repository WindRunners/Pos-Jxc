= form_for @import_bag_receiver, remote:true,url:{action: @action},html: {class: "form-horizontal"} do |f|
  #error_explanation{"style"=>"display:none"}
    %ul

  .form-group
    = f.label :receiver_mobile,'目标账号:',class: 'col-sm-2 control-label'
    .col-sm-8
      = f.number_field :receiver_mobile,class: 'form-control',placeholder:'目标账号'
  .form-group
    = f.label :memo,'备注:',class: 'col-sm-2 control-label'
    .col-sm-8
      = f.text_field :memo,class: 'form-control',placeholder:'备注'

  .form-group
    .col-sm-offset-2.col-sm-8
      = f.submit "保存",class: 'btn btn-default'
