%p#notice= notice

%p
  %b 分享标题:
  = @product_ticket.title
%p
  %b logo:
  %img#img_product_ticket_logo{:style => "height:50px;width:50px",:src=>@product_ticket.logo.url}
%p
  %b 开始时间:
  = @product_ticket.start_date_str
%p
  %b 结束时间:
  = @product_ticket.end_date_str
%p
  %b 商品:
  -#= Product.find(@product_ticket.product_id).title
%p
  %b 商品logo:
  -#%img#img_product_ticket_logo{:style => "height:50px;width:50px",:src=>Product.find(@product_ticket.product_id).avatar.url}
%p
  %b 状态:
  = @product_ticket.status_str
%p
  %b 分享描述:
  = @product_ticket.desc
%p
  %b 规则:
  =markdown @product_ticket.rule_content
%p
  %b 小C数量:
  = @product_ticket.customer_ids



= link_to 'Edit',  '', 'data-href' =>edit_product_ticket_path(@product_ticket),class:'btn btn-xs btn-info'
