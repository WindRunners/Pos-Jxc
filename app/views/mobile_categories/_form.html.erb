<%= form_for @category, :html => {:class => 'form-horizontal category'}, remote:true do |f| %>
    <% if @category.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>



    <div class="form-group">
      <%= f.label :title, :class => 'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-3">
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>

    <div class="space-4"></div>


    <div class="space-4"></div>

    <div class="form-group">
      <%= f.label :num, class:'col-sm-3 control-label no-padding-right' %>
      <div class="col-sm-3">
        <%= f.text_field :num, class:'form-control' %>
      </div>
    </div>


    <div class="clearfix form-actions">
      <div class="col-md-offset-4 col-md-9">
        <button class="btn btn-info" id="save_form" type="submit">
          <i class="ace-icon fa fa-check bigger-110"></i>
          保存
        </button>

        &nbsp; &nbsp; &nbsp;
        <a class="btn" data-href="<%= mobile_categories_path %>">
          <i class="ace-icon fa fa-return bigger-110"></i>
          返回
        </a>
      </div>
    </div>
<% end %>