          <div class="widget-header widget-header-large">
            <h4 class="widget-title">Big Header</h4>
          </div>


          <div class="widget-body">
            <div class="widget-main">
              <%= link_to '通过', '', 'data-href' => next_check_announcements_path(:announcement_id => @announcement.id, :status => @announcement.status), :class => 'btn btn-default btn-xs' %>
