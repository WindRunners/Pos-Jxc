%h1 电话黄页

= link_to '添加', '', 'data-href' =>new_phone_book_path,class:"btn btn-xs btn-success"

%div{class:"space space-4"}

%div{class:'row',style:'background-color:#EFF3F8'}
  %div{class:'col-xs-6'}
    %div{class:'dataTables_info',id:'dynamic-table_info',role:'status',"aria-live"=>'polite',style:'padding-top:13px;'}
      = page_entries_info @phone_books
  %div{class:'col-xs-6'}
    %div{class:'dataTables_paginate paging_simple_numbers',id:'dynamic-table_paginate'}
      %ul{class:'pagination',style:'padding-top:5px;'}
        %li{class:'paginate_button previous disabled',id:'dynamic-table_previous',"aria-controls"=>'dynamic-table',"tabindex"=>'0'}
          = paginate @phone_books

%table{class: "table table-striped table-bordered table-hover"}
  %thead
    %tr
      %th 图标
      %th=t('mongoid.attributes.phone_book.telephone')
      %th=t('mongoid.attributes.phone_book.name')
      %th=t('mongoid.attributes.phone_book.url')
      %th=t('mongoid.attributes.phone_book.city')
      %th=t('mongoid.attributes.phone_book.address')
      %th=t('mongoid.attributes.phone_book.nature')
      %th

  %tbody
    - @phone_books.each do |phone_book|
      %tr
        %td=image_tag(phone_book.photo.url,size:"75x90")
        %td= phone_book.telephone
        %td= phone_book.name
        %td= phone_book.url
        %td= phone_book.city
        %td= phone_book.address
        %td= phone_book.nature
        %td
          = link_to '查看','', 'data-href' => phone_book_path(phone_book),class:'btn btn-xs btn-info'
          = link_to '编辑','', 'data-href' => edit_phone_book_path(phone_book),class:'btn btn-xs btn-warning'
          = link_to '删除', phone_book,:method => :delete,:remote =>true,:data => { :confirm => 'Are you sure?' },class:'btn btn-xs btn-danger'


%div{class:'row',style:'background-color:#EFF3F8'}
  %div{class:'col-xs-6'}
    %div{class:'dataTables_info',id:'dynamic-table_info',role:'status',"aria-live"=>'polite',style:'padding-top:13px;'}
  %div{class:'col-xs-6'}
    %div{class:'dataTables_paginate paging_simple_numbers',id:'dynamic-table_paginate'}
      %ul{class:'pagination',style:'padding-top:5px;'}
        %li{class:'paginate_button previous disabled',id:'dynamic-table_previous',"aria-controls"=>'dynamic-table',"tabindex"=>'0'}
          = paginate @phone_books

