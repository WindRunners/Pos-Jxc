= form_for @phone_book,remote: true do |f|
  - if @phone_book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone_book.errors.count, "error")} prohibited this phone_book from being saved:"
      %ul
        - @phone_book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :telephone
    = f.text_field :telephone
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :nature
    = f.text_field :nature
  .actions
    = f.submit '保存',class:"btn btn-xs btn-success"
