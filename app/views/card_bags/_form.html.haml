= form_for @card_bag do |f|
  - if @card_bag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card_bag.errors.count, "error")} prohibited this card_bag from being saved:"
      %ul
        - @card_bag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_id
    = f.text_field :customer_id
  .field
    = f.label :status
    = f.number_field :status
  .field
    = f.label :register_customer_count
    = f.number_field :register_customer_count
  .field
    = f.label :login_customer_count
    = f.number_field :login_customer_count
  .field
    = f.label :source
    = f.number_field :source
  .actions
    = f.submit 'Save'
